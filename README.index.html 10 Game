<script>
const correctKeys = ["BDBOY123","JOINBD5054","SUBYT2025"]; // ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶ü‡ßá‡¶≤‡¶ø‡¶ó‡ßç‡¶∞‡¶æ‡¶Æ ‡¶•‡ßá‡¶ï‡ßá ‡¶Ü‡¶∏‡¶æ KEY ‡¶ó‡ßÅ‡¶≤‡ßã ‡¶¨‡¶∏‡¶æ‡¶®

let balance = 0;
let unlockedGame = 1;

function updateBalance(amount){
  balance += amount;
  document.getElementById('balance').innerText = `üí∏ ${balance} üí∏`;
}

function checkKey(){
  let key = document.getElementById('keyInput').value.trim();
  if(correctKeys.includes(key)){
    alert("‚úÖ Key ‡¶†‡¶ø‡¶ï ‡¶Ü‡¶õ‡ßá! ‡¶ó‡ßá‡¶Æ ‡¶Ü‡¶®‡¶≤‡¶ï ‡¶π‡ßü‡ßá‡¶õ‡ßá‡•§");
    document.getElementById('keyDiv').style.display = 'none';
    document.getElementById('games').style.display = 'block';
    refreshGames();
  } else {
    alert("‚ùå ‡¶≠‡ßÅ‡¶≤ Key! ‡¶Ü‡¶¨‡¶æ‡¶∞ ‡¶ö‡ßá‡¶∑‡ßç‡¶ü‡¶æ ‡¶ï‡¶∞‡ßÅ‡¶®‡•§");
  }
}

function refreshGames(){
  for(let i=1;i<=3;i++){
    let g = document.getElementById('game'+i);
    if(i<=unlockedGame) g.classList.remove('locked');
    else g.classList.add('locked');
  }
}

for(let i=1;i<=3;i++){
  document.getElementById('game'+i).addEventListener('click', function(){
    if(i>unlockedGame){ alert("‡¶Ü‡¶ó‡ßá‡¶∞ ‡¶ó‡ßá‡¶Æ ‡¶∂‡ßá‡¶∑ ‡¶ï‡¶∞‡ßÅ‡¶®!"); return; }
    alert("Game Completed! +10 coins");
    updateBalance(10);
    if(unlockedGame < i+1) unlockedGame = i+1;
    refreshGames();
  });
}
</script>

